<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".add_food"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:gravity="center_horizontal|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Add nourishment"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/name_food"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:text="Name : " />

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="ex : banana"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="0.05"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_calorie"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.09"
            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:text="Calorie : " />

        <EditText
            android:id="@+id/ed_calorie"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="ex : 300"
            android:inputType="numberSigned"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_opt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8.73"
                android:fontFamily="casual"
                android:text="Lipids :" />

            <EditText
                android:id="@+id/ed_lipids"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="ex : 250"
                android:inputType="numberSigned"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3.76"
                android:fontFamily="casual"
                android:text="Carbohydrates :" />

            <EditText
                android:id="@+id/ed_carbohydrates"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="ex : 12"
                android:inputType="numberSigned"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="Protein :" />

            <EditText
                android:id="@+id/ed_protein"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="ex : 23"
                android:inputType="numberSigned"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_full_opt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.82"
        android:fontFamily="casual"
        android:text="Full options"
        app:buttonTint="@android:color/background_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_add"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:backgroundTint="@color/colorButton"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/add"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:onClick="buttonAdd"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
